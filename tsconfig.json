{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./src",               // Root directory of source files
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"]
}
